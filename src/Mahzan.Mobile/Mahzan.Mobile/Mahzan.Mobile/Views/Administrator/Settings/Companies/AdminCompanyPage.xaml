    <TabbedPage.Children>
        <ContentPage Title="Informacion">
            <ContentPage.Content>
              <StackLayout>
                  <ScrollView>
                      <Grid>
                          <Grid.RowDefinitions>
                              <RowDefinition Height="Auto"/>
                              <RowDefinition Height="*"/>
                          </Grid.RowDefinitions>
                          <forms:CachedImage
                              Grid.Row="0"
                              Source="background_company.png"
                              HorizontalOptions="FillAndExpand"
                              VerticalOptions="StartAndExpand"
                              CacheType="Memory"
                              Aspect="AspectFill"
                          >
                          </forms:CachedImage>
                          <Frame CornerRadius="10" 
                                 BackgroundColor="White" 
                                 Grid.RowSpan="2" 
                                 Margin="20,150,20,20">
                              <Grid RowSpacing="5">
                                  <Grid.RowDefinitions>
                                      <RowDefinition Height="Auto"></RowDefinition>
                                      <RowDefinition Height="Auto"></RowDefinition>
                                      <RowDefinition Height="Auto"></RowDefinition>
                                      <RowDefinition Height="Auto"></RowDefinition>
                                  </Grid.RowDefinitions>
                                  <Grid.ColumnDefinitions>
                                      <ColumnDefinition Width="Auto" />
                                      <ColumnDefinition Width="*" />
                                      <ColumnDefinition Width="20" />
                                  </Grid.ColumnDefinitions>
                                  <Picker Grid.Row="0" 
                                          Grid.Column="1"
                                          Title="- Giro Comercial -" 
                                          ItemsSource="{Binding CommercialBusiness, Mode=TwoWay}" 
                                          ItemDisplayBinding="{Binding Description, Mode=TwoWay}"
                                          SelectedItem="{Binding SelectedCommercialBusiness, Mode=TwoWay}"/>
                                  
                                  <!--CompanyName-->
                                  <Entry Grid.Row="1"
                                         Grid.Column="1"
                                         Placeholder="* Nombre"
                                         Keyboard="Text"
                                         Text="{Binding Name, Mode=TwoWay}">
                                      <Entry.Behaviors>
                                          <behaviors:NotEmptyValidatorBehavior x:Name="CompanyNameValidator" />
                                      </Entry.Behaviors>
                                  </Entry>
                                  <Image Grid.Row="1" 
                                         Grid.Column="2" 
                                         x:Name="CompanyNameSuccessErrorImage"
                                         Style="{Binding Source={x:Reference CompanyNameValidator}, 
                                   Path=IsValid, 
                                   Converter={StaticResource boolToStyleImage}}"/>
                                  <Label Grid.Row="2" 
                                         Grid.Column="1" 
                                         Style="{Binding Source={x:Reference CompanyNameValidator}, 
                                   Path=IsValid, 
                                   Converter={StaticResource boolToStyleCompanyName}}" 
                                         FontSize="16"/>
                                  <!--/CompanyName-->
                                  
                                  <!--Rfc-->
                                  <Entry Grid.Row="3"
                                         Grid.Column="1"
                                         Placeholder="* RFC"
                                         Keyboard="Text"
                                         Text="{Binding Rfc, Mode=TwoWay}"
                                         TextTransform="Uppercase">
                                      <Entry.Behaviors>
                                          <behaviors:NotEmptyValidatorBehavior x:Name="RfcValidator" />
                                          <behaviors:MaskedBehavior Mask="XXXXXXXXXXXXX" />
                                      </Entry.Behaviors>
                                  </Entry>
                                  <Image Grid.Row="3" 
                                         Grid.Column="2" 
                                         x:Name="RfcSuccessErrorImage"
                                         Style="{Binding Source={x:Reference RfcValidator}, 
                                   Path=IsValid, 
                                   Converter={StaticResource boolToStyleImage}}"/>
                                  <Label Grid.Row="4" 
                                         Grid.Column="1" 
                                         Style="{Binding Source={x:Reference RfcValidator}, 
                                   Path=IsValid, 
                                   Converter={StaticResource boolToStyleRfc}}" 
                                         FontSize="16"/>
                                  <!--/Rfc-->
                              </Grid>
                          </Frame>
                      </Grid>
                  </ScrollView>
              </StackLayout>
            </ContentPage.Content>
        </ContentPage>
